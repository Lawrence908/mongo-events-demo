// 17. Aggregation with complex date operations
db.events.aggregate([
  {
    $addFields: {
      isWeekend: {
        $in: [
          { $dayOfWeek: "$start_date" },
          [1, 7] // Sunday and Saturday
        ]
      },
      isEvening: {
        $gte: [{ $hour: "$start_date" }, 18]
      }
    }
  },
  {
    $group: {
      _id: {
        isWeekend: "$isWeekend",
        isEvening: "$isEvening"
      },
      count: { $sum: 1 },
      avgPrice: { $avg: "$price" },
      avgSeats: { $avg: "$max_attendees" }
    }
  }
]);

