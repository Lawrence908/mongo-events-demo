// 19. Aggregation with multiple lookups
db.events.aggregate([
  {
    $lookup: {
      from: "venues",
      localField: "venueId",
      foreignField: "_id",
      as: "venue"
    }
  },
  { $unwind: "$venue" },
  {
    $lookup: {
      from: "tickets",
      localField: "_id",
      foreignField: "event_id",
      as: "tickets"
    }
  },
  {
    $addFields: {
      ticketCount: { $size: "$tickets" },
      occupancyRate: {
        $divide: [
          { $size: "$tickets" },
          "$max_attendees"
        ]
      }
    }
  },
  {
    $project: {
      "title": 1,
      "venue.name": 1,
      "ticketCount": 1,
      "max_attendees": 1,
      "occupancyRate": 1
    }
  }
]);

// 20. Aggregation with complex grouping and sorting
db.events.aggregate([
  {
    $lookup: {
      from: "venues",
      localField: "venueId",
      foreignField: "_id",
      as: "venue"
    }
  },
  { $unwind: "$venue" },
  {
    $group: {
      _id: {
        venueName: "$venue.name",
        year: { $year: "$start_date" },
        month: { $month: "$start_date" }
      },
      eventCount: { $sum: 1 },
      totalSeats: { $sum: "$max_attendees" },
      avgPrice: { $avg: "$price" },
      totalRevenue: {
        $sum: {
          $multiply: [
            { $ifNull: ["$price", 0] },
            "$max_attendees"
          ]
        }
      }
    }
  },
  {
    $sort: {
      "_id.venueName": 1,
      "_id.year": 1,
      "_id.month": 1
    }
  }
]);


